{
    "tab_size": 4,
    "indent_guides": {
        "active_line_width": 1,
        "coloring": "fixed",
        "background_coloring": "disabled",
        "line_width": 1,
    },
    "agent_servers": {
        "claude": {
            "default_model": "sonnet",
        },
    },
    "toolbar": {
        "code_actions": false,
        "agent_review": true,
        "selections_menu": true,
        "quick_actions": false,
        "breadcrumbs": false,
    },
    "minimap": {
        "show": "never",
    },
    "gutter": {
        "line_numbers": true,
    },
    "which_key": {
        "enabled": false,
    },
    "outline_panel": {
        "button": true,
    },
    "cursor_shape": "bar",
    "scrollbar": {
        "show": "auto",
        "git_diff": true,
    },
    "edit_predictions": {
        "provider": "zed",
        "mode": "subtle",
    },
    "lsp": {
        "vtsls": {
            "settings": {
                "typescript": {
                    "updateImportsOnFileMove": {
                        "enabled": "always",
                    },
                },
